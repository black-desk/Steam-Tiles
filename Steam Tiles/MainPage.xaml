                                                <ComboBoxItem x:Uid="ConfigTileImageStretchUniform"/>
                                                <ComboBoxItem x:Uid="ConfigTileImageStretchUniformFill"/>
                                                <ComboBoxItem x:Uid="ConfigTileImageStretchFill"/>
